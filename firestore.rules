rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Shared agendas - anyone can read, only authenticated users can write
    match /shared_agendas/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Suggested blocks - Auth users can create, Only Admin can read/update
    match /suggested_blocks/{document} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth.token.email == 'leoruas@gmail.com';
    }

    // Approved blocks - Public read, Auth write
    match /approved_blocks/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Public agendas (Live Links) - anyone can read, only owner can write
    match /public_agendas/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User favorites - only the owner can read/write
    match /users/{userId}/favorites/{document} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profiles - only the owner can read/write
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
