rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ========================================
    // USERS COLLECTION (Private Data)
    // ========================================
    // Users can only read/write their own document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // ========================================
    // PUBLIC AGENDAS COLLECTION
    // ========================================
    // Anyone can read public agendas
    // Only owner can create/update their public agenda
    match /public_agendas/{userId} {
      allow read: if true; // Anyone can read
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // ========================================
    // SHARED AGENDAS COLLECTION
    // ========================================
    // Anyone can read shared agendas (via link)
    // Only owner can create shared links
    match /shared_agendas/{shareId} {
      allow read: if true; // Anyone with the link can read
      allow create: if isAuthenticated() && 
                       request.resource.data.ownerId == request.auth.uid;
      allow delete: if isAuthenticated() && 
                       resource.data.ownerId == request.auth.uid;
    }

    // ========================================
    // SUGGESTED BLOCKS COLLECTION
    // ========================================
    match /suggested_blocks/{blockId} {
      // Anyone logged in can suggest
      allow create: if isAuthenticated();
      
      // Only specifc admin email can manage suggestions
      allow read, delete: if request.auth.token.email == 'leoruas@gmail.com';
    }
    
    // ========================================
    // BLOCKS COLLECTION (Dynamic Blocks Data)
    // ========================================
    // Public read-only data - anyone can read
    match /blocks/{blockId} {
      allow read: if true; // Public blocks data
      allow write: if false; // Admin only (not implemented yet)
    }
    
    // ========================================
    // REVIEWS COLLECTION
    // ========================================
    match /reviews/{reviewId} {
      // Helper: Check if review already exists for this user + block combination
      function reviewExists(userId, blockId) {
        return exists(/databases/$(database)/documents/reviews/$(userId + '_' + blockId));
      }
      
      // Create: Authenticated users only, 1 review per block
      // Auto-approve if no comment, otherwise pending
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.blockId is string
        && request.resource.data.rating >= 1 
        && request.resource.data.rating <= 5
        && (
          (request.resource.data.comment == null && request.resource.data.status == 'approved') ||
          (request.resource.data.comment != null && request.resource.data.status == 'pending')
        )
        && !reviewExists(request.auth.uid, request.resource.data.blockId);
      
      // Read: Anyone can read approved reviews, admin can read all, users can read their own
      allow read: if resource.data.status == 'approved'
        || (isAuthenticated() && resource.data.userId == request.auth.uid)
        || (isAuthenticated() && request.auth.token.email == 'leoruas@gmail.com');
      
      // Update: Only admin can moderate (approve/reject)
      allow update: if isAuthenticated() 
        && request.auth.token.email == 'leoruas@gmail.com';
      
      // Delete: Only admin can delete
      allow delete: if isAuthenticated() 
        && request.auth.token.email == 'leoruas@gmail.com';
    }
    
    
    // ========================================
    // APPROVED BLOCKS COLLECTION
    // ========================================
    // Admin-approved dynamic blocks - public read
    match /approved_blocks/{blockId} {
      allow read: if true; // Anyone can read approved blocks
      allow write: if isAuthenticated(); // Only authenticated users (admin flow)
    }
    
    // ========================================
    // TEST COLLECTION (for debugging)
    // ========================================
    // Allow anyone to read/write test documents
    match /test/{document=**} {
      allow read, write: if true;
    }
    
    // ========================================
    // CONNECTION TEST (for warmup)
    // ========================================
    match /_connection_test/{document=**} {
      allow read: if true;
      allow write: if false; // Read-only
    }
    
    // ========================================
    // DEFAULT: DENY ALL
    // ========================================
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
